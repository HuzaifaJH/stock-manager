{
  "name": "stock-manager",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "type": "module",
  "author": "Huzaifa",
  "description": "Inventory Management System",
  "_start-website": "next start -p 3000 -H 0.0.0.0",
  "_start-desktop": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "electron": "electron .",
    "start": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "lint": "next lint",
    "electron-build": "npx electron-builder --win"
  },
  "dependencies": {
    "chart.js": "^4.4.9",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "googleapis": "^149.0.0",
    "kill-port": "^2.0.1",
    "mysql2": "^3.12.0",
    "next": "15.1.7",
    "pdf-to-printer": "^5.6.0",
    "pg-hstore": "^2.3.4",
    "puppeteer": "^24.8.2",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.4.0",
    "react-spinners": "^0.15.0",
    "sequelize": "^6.37.5",
    "theme-change": "^2.5.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sequelize": "^4.28.20",
    "concurrently": "^9.1.2",
    "daisyui": "^4.12.24",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^8.0.2"
  },
  "build": {
    "asar": true,
    "compression": "maximum",
    "productName": "Stock Manager",
    "appId": "com.hj.stockmanager",
    "win": {
      "target": "nsis",
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "IMS.exe"
    },
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "removePackageScripts": true,
    "extraResources": [
      {
        "from": ".next/standalone/",
        "to": "next/"
      },
      {
        "from": ".next/static/",
        "to": "next/.next/static/"
      },
      {
        "from": "public/",
        "to": "public/"
      },
      {
        "from": "next.config.ts",
        "to": "next.config.ts"
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ]
  }
}
